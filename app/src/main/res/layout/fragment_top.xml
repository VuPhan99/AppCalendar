<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_spflash"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/top_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:paddingTop="10dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ToggleButton
                android:id="@+id/btn_top_detail"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/tv_date"
                android:background="@drawable/ic_arrow_drop_down_black_24dp"
                android:textOff=""
                android:textOn="" />

            <ImageButton

                android:id="@+id/btn_change_day"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/btn_setting"
                android:layout_marginRight="12dp"
                android:background="@null"
                android:src="@drawable/ic_swap_horiz_black_24dp" />

            <ImageButton
                android:layout_marginRight="10dp"
                android:id="@+id/btn_setting"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:src="@drawable/ic_settings_black_24dp" />


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/layout_detail_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="4">

            <Button
                android:id="@+id/btn_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@drawable/ic_clear_all_black_24dp"
                android:drawablePadding="8dp"
                android:gravity="left|center_vertical"
                android:text="Month"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@drawable/ic_view_week_black_24dp"
                android:drawablePadding="8dp"
                android:gravity="left|center_vertical"
                android:text="Week"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@drawable/ic_today_black_24dp"
                android:drawablePadding="8dp"
                android:gravity="left|center_vertical"
                android:text="Day"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@drawable/ic_event_available_black_24dp"
                android:drawablePadding="8dp"
                android:gravity="left|center_vertical"
                android:text="Event"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
