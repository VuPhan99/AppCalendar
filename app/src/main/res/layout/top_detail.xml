<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/top_detail"
    android:weightSum="4">

    <Button
        android:id="@+id/btn_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:drawableTop="@drawable/ic_clear_all_black_24dp"
        android:drawablePadding="8dp"
        android:gravity="left|center_vertical"
        android:text="Month"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:drawableTop="@drawable/ic_view_week_black_24dp"
        android:drawablePadding="8dp"
        android:gravity="left|center_vertical"
        android:text="Week"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:drawableTop="@drawable/ic_today_black_24dp"
        android:drawablePadding="8dp"
        android:gravity="left|center_vertical"
        android:text="Day"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:drawableTop="@drawable/ic_event_available_black_24dp"
        android:drawablePadding="8dp"
        android:gravity="left|center_vertical"
        android:text="Event"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="12sp" />
</LinearLayout>